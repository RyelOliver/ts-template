{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "eofline": true,
        "no-consecutive-blank-lines": true,
        "max-line-length": [
            true,
            128
        ],
        "max-classes-per-file": false,
        "semicolon": true,
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "no-console": [
            true,
            "log"
        ]
    },
    "rulesDirectory": []
}